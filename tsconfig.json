{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015.core",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "declaration": true
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
